name: Test

on:
  push

jobs:
  makemd:
    name: Make MD
    runs-on: ubuntu-latest
    steps:

    - name: Checkout
      uses: actions/checkout@v2

    - name: Setup Node.js
      uses: actions/setup-node@v1
      with:
        node-version: '12.x'
      
    - name: Make md file
      uses: Jnqa/documentation2md@main
      id: makemd
      with:
        inputdir: ./test/
        mdname: messages.md

    - name: test
      run: |
        ls .
        ls ./doxygen_act/
        cat ./doxygen_act/*